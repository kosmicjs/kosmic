{
  "name": "@kosmic/error-handler",
  "version": "0.0.0",
  "description": "Error handling middleware for Koa with Zod integration",
  "keywords": [
    "koa",
    "error-handler",
    "middleware",
    "zod"
  ],
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    }
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
