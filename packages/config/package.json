{
  "name": "@kosmic/config",
  "version": "0.0.0",
  "description": "Reusable configuration for Kosmic apps",
  "keywords": [
    "config",
    "configuration",
    "kosmic",
    "bootstrap"
  ],
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    }
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "check": "tsc --noEmit",
    "lint": "xo",
    "test": "node --test **/*.test.ts",
    "test:coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "nodemailer": "^7.0.13",
    "pg": "^8.19.0",
    "type-fest": "^5.4.4",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=22"
  }
}
