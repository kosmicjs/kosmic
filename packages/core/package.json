{
  "name": "@kosmic/core",
  "version": "0.0.0",
  "description": "Core shared utilities for Kosmic packages and apps",
  "keywords": [
    "core",
    "utilities"
  ],
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    }
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "check": "tsc --noEmit",
    "lint": "xo",
    "test": "node --test **/*.test.ts",
    "test:coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@kosmic/logger": "^0.0.0",
    "argon2": "^0.44.0",
    "kysely": "^0.28.11"
  },
  "engines": {
    "node": ">=22"
  }
}
