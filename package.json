{
  "name": "spence-s-monorepo-template",
  "version": "0.0.0",
  "private": true,
  "description": "An opinionated typescript + ESM monorepo starter template for publishing npm packages.",
  "homepage": "https://github.com/spence-s/spence-s-monorepo-template",
  "bugs": {
    "url": "https://github.com/spence-s/spence-s-monorepo-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spence-s/spence-s-monorepo-template.git"
  },
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "changeset": "changeset",
    "check": "npm run check --workspaces --if-present",
    "clean": "rimraf dist",
    "dev": "npm run build:watch -ws --if-present & npm run dev -w kosmic-template",
    "lint": "xo",
    "prepare": "husky",
    "release": "npm run build && changeset publish",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "update": "ncu -i && npx --ws ncu -i",
    "version": "changeset version"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ]
  },
  "overrides": {
    "eslint": "9.38.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.10",
    "c8": "^10.1.3",
    "chokidar": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "meow": "^14.0.0",
    "npm-check-updates": "^19.3.1",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "rimraf": "^6.1.2",
    "sass": "1.97.3",
    "swagger-ui-dist": "^5.31.0",
    "type-fest": "^5.4.1",
    "typed-htmx": "^0.3.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1",
    "wait-on": "^9.0.3",
    "xo": "^1.2.3"
  },
  "engines": {
    "node": ">=22"
  }
}
