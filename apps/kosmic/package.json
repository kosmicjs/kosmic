{
  "name": "kosmic",
  "version": "0.0.0",
  "description": "A highly opinionated and strongly typed Koa web and api template.",
  "bugs": {
    "url": "https://github.com/spence-s/kosmic/issues"
  },
  "repository": {
    "url": "https://github/com/spence-s/kosmic"
  },
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "imports": {
    "#components/*": "./dist/src/components/*",
    "#config/*": "./dist/src/config/*",
    "#models/*": "./dist/src/models/*",
    "#middleware/*": "./dist/src/middleware/*",
    "#db/*": "./dist/src/db/*",
    "#emails/*": "./dist/src/emails/*",
    "#utils/*": "./dist/src/utils/*",
    "#islands/*": "./dist/src/client/islands/*",
    "#server": "./dist/src/server.js"
  },
  "main": "dist/src/index.js",
  "source": "./src/app/client/main.ts",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "analyze": "vite-bundle-visualizer",
    "build": "npm run clean && npm run compile",
    "build:vite-plugin": "tsc -p ./scripts/tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "compile": "npm run compile:tsc && npm run compile:vite && npm run compile:cp",
    "compile:cp": "cp -rp src/public ./dist/src",
    "compile:tsc": "tsc --build tsconfig.json",
    "compile:vite": "vite build",
    "dev": "dev",
    "lint": "xo",
    "migrate": "npm run clean && npm run compile:tsc && KOSMIC_ENV=migration migrate -d ./src/db/index.ts --migrations ./src/db/migrations.ts",
    "prepublishOnly": "npm run build",
    "start": "NODE_ENV=production KOSMIC_ENV=production node dist/src/index.js | pino-princess",
    "test": "rimraf dist && tsc -p tsconfig.json && NODE_ENV=test KOSMIC_ENV=test node --test dist/test/server.test.js",
    "test:watch": "rimraf dist && tsc -p tsconfig.json --watch & wait-on dist/test/server.test.js && NODE_ENV=test KOSMIC_ENV=test node --test --watch dist/test/server.test.js"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^8.0.0",
    "@google/genai": "^1.43.0",
    "@kosmic/cli": "^0.0.0",
    "@kosmic/core": "^0.0.0",
    "@kosmic/logger": "^0.0.0",
    "@kosmic/router": "^0.0.0",
    "@kosmic/server": "^0.0.0",
    "@popperjs/core": "^2.11.8",
    "@stripe/stripe-js": "^8.7.0",
    "argon2": "^0.44.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "camelcase": "^9.0.0",
    "cheerio": "^1.2.0",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "cron": "^4.4.0",
    "dedent": "^1.7.1",
    "dotenv": "^17.2.4",
    "execa": "^9.6.1",
    "got": "^14.6.6",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "htmx.org": "^2.0.8",
    "humanize-string": "^3.1.0",
    "juice": "^11.1.1",
    "koa-passport": "^6",
    "kysely": "^0.28.11",
    "nodemailer": "^8.0.1",
    "openai": "^6.21.0",
    "p-wait-for": "^6.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "path-exists": "^5.0.0",
    "path-to-regexp": "^8.3.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "pino-princess": "^1.6.0",
    "postcss": "^8.5.6",
    "postcss-css-variables": "^0.19.0",
    "preact": "^10.28.3",
    "preact-render-to-string": "^6.6.5",
    "pretty": "^2.0.0",
    "preview-email": "^3.1.1",
    "stripe": "^20.3.1",
    "titleize": "^4.0.0",
    "tough-cookie": "^6.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bootstrap": "^5.2.10",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-session": "^6.4.5",
    "@types/node": "~25.2.3",
    "@types/nodemailer": "^7.0.9",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-http-bearer": "^1.0.42",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.16.0",
    "@types/postcss-css-variables": "^0.18.3",
    "@types/pretty": "^2.0.3",
    "@types/preview-email": "^3.1.0",
    "@types/swagger-ui-dist": "^3.30.6",
    "chokidar": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "meow": "^14.0.0",
    "npm-check-updates": "^19.3.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "rimraf": "^6.1.2",
    "sass": "1.97.3",
    "type-fest": "^5.4.4",
    "typed-htmx": "^0.3.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1",
    "wait-on": "^9.0.3"
  }
}
