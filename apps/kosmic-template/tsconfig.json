{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "types": ["vite/client", "typed-htmx"],
    "erasableSyntaxOnly": false
  },
  "include": ["src/**/*", "test/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "scripts"],
  "references": [
    { "path": "../../packages/utils" },
    { "path": "../../packages/server" },
    { "path": "../../packages/router" },
    { "path": "../../packages/helmet" },
    { "path": "../../packages/pino-http" },
    { "path": "../../packages/jsx" },
    { "path": "../../packages/error-handler" }
  ]
}
